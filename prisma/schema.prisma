generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comments {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  byId Json?  @unique
}

model News {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  by           String
  commentCount BigInt
  content      String
  createdAt    BigInt
  editedAt     BigInt
  slug         String
  sourceUrl    String
  title        String @unique
  titleSlug    String @unique
  userId       String @db.ObjectId
  votes        BigInt
}

model Users {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt BigInt
  email     String  @unique
  name      String  @unique
  nuked     Boolean
}

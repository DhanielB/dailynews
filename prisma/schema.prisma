// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
}

model News {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt Int
}

model Comments {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  user      String
  makedAt   String
  createdAt Int
}

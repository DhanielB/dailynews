// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  by           String
  commentCount Int
  content      String
  createdAt    Int
  editedAt     Int
  slug         String
  sourceUrl    String
  title        String @unique
  titleSlug    String @unique
  userId       String
  votes        Int
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt Int
  email     String  @unique
  name      String  @unique
  nuked     Boolean
}

model Comments {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  by String
  content String
  commentedAt String @default("")
}